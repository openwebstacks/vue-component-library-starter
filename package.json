{
  "name": "my-lib",
  "version": "0.12.0",
  "packageManager": "pnpm@7.3.0",
  "description": "The easy way to start your Vue 3 Component Library.",
  "author": "Chris Breuer <chris@ow3.org>",
  "license": "MIT",
  "homepage": "https://github.com/openweblabs/vue-component-library-starter#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openweblabs/vue-component-library-starter.git"
  },
  "bugs": {
    "url": "https://github.com/openweblabs/vue-component-library-starter/issues"
  },
  "keywords": [
    "component",
    "library",
    "vue",
    "typescript",
    "javascript",
    "starter",
    "kit"
  ],
  "contributors": [
    "Chris Breuer <chris@ow3.org>"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/my-lib.umd.js",
      "import": "./dist/my-lib.es.js"
    }
  },
  "main": "./dist/my-lib.umd.js",
  "module": "./dist/my-lib.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=v16.15.1",
    "pnpm": ">=7.3.0"
  },
  "scripts": {
    "build": "vite build && pnpm run typecheck",
    "dev": "vite dev --open --port 3333",
    "fresh": "rimraf node_modules/ pnpm-lock.yaml && pnpm i",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "coverage": "vitest run --coverage",
    "test": "vitest",
    "test:e2e": "cypress open",
    "test:unit": "vitest",
    "typecheck": "vue-tsc --emitDeclarationOnly",
    "release": "npx bumpp package.json --execute 'pnpm run changelog' --all",
    "preinstall": "node .scripts/check-for-pnpm.js && node .scripts/check-node-version.mjs"
  },
  "dependencies": {
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.1",
    "@babel/types": "^7.18.4",
    "@iconify-json/heroicons-outline": "^1.1.1",
    "@iconify-json/heroicons-solid": "^1.1.1",
    "@ow3/stacks": "^0.20.6",
    "@types/node": "^17.0.31",
    "@unocss/preset-icons": "^0.39.3",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/compiler-sfc": "^3.2.37",
    "@vueuse/core": "^8.7.4",
    "bumpp": "^8.2.1",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.2.2",
    "cypress": "^10.1.0",
    "cz-git": "^1.3.5",
    "eslint": "^8.18.0",
    "eslint-plugin-cypress": "^2.12.1",
    "lint-staged": "^13.0.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.7.4",
    "unocss": "^0.39.3",
    "unplugin-auto-import": "^0.8.8",
    "unplugin-vue-components": "^0.19.6",
    "vite": "^2.9.12",
    "vitest": "^0.15.1",
    "vue": "^3.2.37",
    "vue-tsc": "^0.38.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --config ./commitlint.config.ts --edit $1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
